@model IEnumerable<Student>
@{
    int StdNoPerTable = Model.Count()/3;
    int i = 0;
}
<div class="row">
    <div class="col-4 p-2">
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>Section 1</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (i >= 0 && i < StdNoPerTable)
                    {
                        <tr>
                            <td>
                                <a onclick="updateStudents(@item.StudentId)" class="btn shadow-none w-100">@item.StudentName</a>
                            </td>
                        </tr>
                    }
                    i++;
                }
                @{i = 0;}
            </tbody>
        </table>
    </div>
    <div class="col-4 p-2">
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>Section 2</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (i >= StdNoPerTable && i < StdNoPerTable * 2)
                    {
                        <tr>
                            <td>
                                <a onclick="updateStudents(@item.StudentId)" class="btn shadow-none w-100">@item.StudentName</a>

                            </td>
                        </tr>
                    }
                    i++;
                }
                @{i = 0;}
            </tbody>
        </table>
    </div>
    <div class="col-4 p-2">
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>Section 3</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (i >= StdNoPerTable * 2 && i <= Model.Count())
                    {
                        <tr>
                            <td>
                                <a onclick="updateStudents(@item.StudentId)" class="btn shadow-none w-100">@item.StudentName</a>

                            </td>
                        </tr>
                    }
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>
