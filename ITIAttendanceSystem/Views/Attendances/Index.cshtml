
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Students Attendnce</h1>
<table class="table table-bordered table-hover text-center">
    <thead>
        <tr>
        <th>Department</th>
        <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <select id="DeptId" name="DeptId" asp-items="ViewBag.Departments" class="w-100">
                    <option>Select </option>
                </select>
            </td>
            <td>
                <select id="Status" name="Status" class="w-100">
                    <option>Arriving</option>
                    <option>Leaving</option>
                </select>
            </td>
        </tr>
    </tbody>
</table>
<div id="Students">
    
</div>
@section Scripts{
    <script>
        function getStudents(){
            var DepartmentID = $("#DeptId").val();
            var Status = $("#Status").val();
            $("#Students").load("/Attendances/DepartmentStudents?DepartmentID="+DepartmentID+"&Status="+Status)
        }
        function updateStudents(Std_Id){
            var DepartmentID = $("#DeptId").val();
            var Status = $("#Status").val();
            $("#Students").load("/Attendances/Attend/"+Std_Id+"?stat="+Status+"&deptId="+DepartmentID)
        }
        $("#DeptId").change(function(){
            getStudents();
        })
        $("#Status").change(function(){
            getStudents();
        })
        </script>
}

