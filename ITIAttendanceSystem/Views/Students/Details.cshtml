@model ITIAttendanceSystem.Models.Student

@{
    ViewData["Title"] = "Details";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<div class="accordion" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne" style="text-align: center;">
     Student Details
    </h2>

  <div class="accordion-item">
    <h2 class="accordion-header" id="headingTwo">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
        Personal Data
      </button>
    </h2>
    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <table class="table table-borderless">
            <thead>
                 <tr>
                     <th scope="col"></th>
                     <th scope="col"></th>
                     <th scope="col"></th>
                     <th scope="col"></th>
                 </tr>
            </thead>
            <tbody>
                <tr>
      <td><span style="background-color: coral;">Name English</span></td>
      <td>@Html.DisplayFor(model => model.Name)</td>
      <td class="table-primary">Name Arabilc</td>
      <td>@Html.DisplayFor(model => model.Name)</td>
    </tr>
    <tr>
      
         <td class="table-primary">Gender</td>
         <td>@Html.DisplayFor(model => model.Gender)</td>
         <td class="table-primary">Military</td>
         <td>@Html.DisplayFor(model => model.MilitaryStatusName)</td>
    </tr>
  </tbody>
</table>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingThree">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
        Eductional Data
      </button>
    </h2>
    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
      <div class="accordion-body">
                <table class="table table-borderless">
            <thead>
                 <tr>
                     <th scope="col"></th>
                     <th scope="col"></th>
                     <th scope="col"></th>
                     <th scope="col"></th>
                 </tr>
            </thead>
            <tbody>
                <tr>
      <td class="table-primary">University</td>
      <td>@Html.DisplayFor(model => model.University)</td>
      <td class="table-primary">Faculty</td>
      <td>@Html.DisplayFor(model => model.Faculty)</td>
    </tr>
    <tr>
      
         <td class="table-primary">Specification</td>
         <td>@Html.DisplayFor(model => model.Specialization)</td>
         <td class="table-primary">Graduation Year</td>
         <td>@Html.DisplayFor(model => model.GraduationYear)</td>
    </tr>
     <tr>
      
         <td class="table-primary">Grade</td>
         <td>@Html.DisplayFor(model => model.GraduationGrade)</td>
         
    </tr>
  </tbody>
</table>
      </div>
    </div>
  </div>
</div>
 <div class="accordion-item">
    <h2 class="accordion-header" id="headingFour">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
        Contact Info
      </button>
    </h2>
    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
      <div class="accordion-body">
                <table class="table table-borderless">
            <thead>
                 <tr>
                     <th scope="col"></th>
                     <th scope="col"></th>
                     <th scope="col"></th>
                     <th scope="col"></th>
                 </tr>
            </thead>
            <tbody>
                <tr>
      <td class="table-primary">Address</td>
      <td>@Html.DisplayFor(model => model.Address)</td>
      <td class="table-primary">Email</td>
      <td>@Html.DisplayFor(model => model.Faculty)</td>
    </tr>
    <tr>
      
         <td class="table-primary">Mobile</td>
         <td>@Html.DisplayFor(model => model.Mobile)</td>
         <td class="table-primary">Phone</td>
         <td>@Html.DisplayFor(model => model.HomePhone)</td>
    </tr>
  </tbody>
</table>
      </div>
    </div>
  </div>
</div>
 <div class="accordion-item">
    <h2 class="accordion-header" id="headingFive">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
        Comments
      </button>
    </h2>
    <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#accordionExample">
      <div class="accordion-body">
              
      </div>
    </div>
  </div>
    
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StudentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
